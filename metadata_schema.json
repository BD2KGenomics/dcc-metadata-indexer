{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "metadata_schema.json",
    "description": "metadata record for a donor",
    "type": "object",
    "properties": {
        "program": {
            "type": "string"
        },
        "project": {
            "type": "string"
        },
        "center_name": {
            "type": "string"
        },
        "submitter_donor_id": {
            "type": "string"
        },
        "donor_uuid": {
            "type": "string"
        },
        "schema_version": {
            "type": "string"
        },
        "timestamp": {
            "type": "string"
        },
        "specimen": {
            "type": "array",
            "items": {
                "submitter_specimen_id": {
                    "type": "string"
                },
                "specimen_uuid": {
                    "type": "string"
                },
                "submitter_specimen_type": {
                    "type": "string"
                },
                "samples": {
                    "type": "array",
                    "items": {
                        "submitter_sample_id": {
                            "type": "string"
                        },
                        "sample_uuid": {
                            "type": "string"
                        },
                        "analysis": {
                            "type": "array",
                            "items": {
                                "analysis_type": {
                                    "type": "string"
                                },
                                "bundle_uuid": {
                                    "type": "string"
                                },
                                "workflow_name": {
                                    "type": "string"
                                },
                                "workflow_version": {
                                    "type": "string"
                                },
                                "workflow_outputs": {
                                    "type": "array",
                                    "items": {
                                        "file_path": {
                                            "type": "string"
                                        },
                                        "file_type": {
                                            "type": "string"
                                        },
                                        "file_uuid": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "timestamp": {
            "type": "string"
        },
        "schema_version": {
            "type": "string"
        }
    }
}
